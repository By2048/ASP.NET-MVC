<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Scripts/ssls-page.css" rel="stylesheet" />
    <link href="~/Scripts/ssls-_layout.css" rel="stylesheet" />  
</head>
<body>

    <div id="book_store">

        <div class="book_head">   
            
            <div class="logo">
                <img src="~/image/logo.jpg" />
            </div>        

            <div class="search">
                @using (Html.BeginForm("List", "Book", FormMethod.Post, new { @class = "form-inline" }))
                {
                    <div class="form-group">
                        <input type="text" name="keyWord" class="form-control searchBox" placeholder="输入内容搜索">
                        <input type="submit" class="btn btn-default" value="搜索">
                    </div>
                }
            </div>

            <div class="infoSummary">
                @Html.Action("Summary", "Reader")
                @Html.Action("Summary", "Borrow")
            </div>                  
           

        </div>

        
        <div class="content">
            <div class="content_left">
                @Html.Action("Menu", "Nav")
            </div>
            <div class="content_right">
                @RenderBody()
            </div>
        </div>



        <div class="footer">
            ©2016 14145305 付祥运
        </div>

    </div>

   
</body>
</html>
