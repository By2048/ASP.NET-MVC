@model SSLS.Domain.Concrete.Reader

@{
    ViewBag.Title = "EditReader";
    Layout = "~/Views/Shared/_Admin.cshtml";
}


<style>
    .editReader {
        width: 300px;
        margin: 100px auto 0px auto;
    }

    h3 {
        text-align: center;
    }

    span {
        font-size: 18px;
    }

    input {
        width: 300px;
        margin: 0px auto 10px auto;
    }

    select {
        width: 300px;
        margin: 0px auto 10px auto;
    }

    button {
        width: 100px;
        margin: 10px 0px 0px 100px;
    }
</style>

<div class="editReader">
    @using (Html.BeginForm("EditReader", "Admin", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.Id)

        <span>Name</span>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })

        <span>Money</span>
        @Html.EditorFor(model => model.Money, new { htmlAttributes = new { @class = "form-control" } })

        <span>Class</span>
        @Html.EditorFor(model => model.Class, new { htmlAttributes = new { @class = "form-control" } })
        @*@Html.DropDownListFor(model => model.Class, new { @class = "form-control" })*@

        <span>Email</span>
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })

        <span>Password</span>
        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })

        <button type="submit" class="btn btn-default" >保存</button>
    }
</div>