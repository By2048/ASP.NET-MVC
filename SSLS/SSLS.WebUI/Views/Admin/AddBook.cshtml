@model SSLS.Domain.Concrete.Book

@{
    ViewBag.Title = "AddBook";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<style>
    .addBook {
        width: 300px;
        margin: 100px auto 0px auto;
    }
    h3{
        text-align:center;
    }
    span {
        font-size: 18px;
    }

    input {
        width: 300px;
        margin: 0px auto 10px auto;
    }

    select {
        width: 300px;
        margin: 0px auto 10px auto;
    }

    button {
        width: 100px;
        margin: 10px 0px 0px 100px;
    }

</style>


<div class="addBook">
    <h3>AddBook</h3>
    @using (Html.BeginForm("AddBook", "Admin", FormMethod.Post))
    {
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "书名" })
        @Html.TextBoxFor(model => model.Authors, new { @class = "form-control", placeholder = "作者" })
        @Html.TextBoxFor(model => model.Press, new { @class = "form-control", placeholder = "出版社" })
        @Html.TextBoxFor(model => model.PublishDate, new { type="date", @class = "form-control", placeholder = "出版日期" })
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control", placeholder = "图书简介" })
        @Html.DropDownListFor(model => model.CategoryID, ViewBag.CategoryList as IEnumerable<SelectListItem>, new { @class = "form-control" })
        <button type="submit" class="btn btn-default">保存</button>

    }
</div>