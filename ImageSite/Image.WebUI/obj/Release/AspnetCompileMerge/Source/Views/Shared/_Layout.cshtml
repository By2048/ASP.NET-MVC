<!DOCTYPE HTML>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    @*    <meta name="viewport" content="width=device-width">*@
    <meta name="viewport" content="width=1500px,height: 850px, initial-scale=1.0, maximum-scale=1.0, user-scalable=yes">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Content/bootstrap.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/bootstrap.min.js"></script>
    <script src="~/Content/jquery-1.10.2.js"></script>
    <script src="~/Content/jquery.min.js"></script>


    <style>
        .content_left, .folder_page_list, .main_body, .header, .search, .summary, .welcome, .favorite,.content_right , .image_page_list{

        }
    </style>

    <style>
        * {
            margin: 0;
            padding: 0;
        }

        .main_body {
            width: 1300px;
            height: 750px;
            margin: 0px auto 0px auto;           
        }

        .content {
            position: relative;
            width: 1300px;
            height: 750px;            
        }

        .header {
            width: 1300px;
            height: 70px;
            margin: 0 auto 0 auto;
            position: relative;          
        }

        .search {
            position: absolute;
            top: 50%;
            margin-left: 50px;
            margin-top: -20px;
            width: 350px;
            
            
        }

        .keyWord {
            width: 250px;           
            margin-left: 15px;
        }

        .submit {
            width: 60px;         
            margin-left: 5px;
        }

        .summary {
            position: absolute;
            top: 50%;
            right: 0;
            margin-top: -20px;
            margin-right: 50px;
            width: 350px;
        }

        .welcome {
            float: right;
        }

        .favorite {
            position: absolute;
            top: 50%;
            right: 0;
            margin-top: -20px;
            margin-right: 450px;
        }
    </style>



</head>
<body>

    <div class="header">

        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-inline search" }))
            {
            <div class="form-group searchInfo">
                <input type="text" name="keyWord" class="form-control keyWord" placeholder="输入内容搜索">
                <input type="submit" class="btn btn-default submit" value="搜索">
            </div>
        }

        <div class="favorite">
            <button type="button" id="btnFavorite" class="btn btn-default">
                <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
            </button>
        </div>

        <div class="summary">
            @Html.Action("Summary", "User")
        </div>

    </div>
    <div class="main_body">
        <div class="content">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="footer">

    </div>
</body>
</html>
