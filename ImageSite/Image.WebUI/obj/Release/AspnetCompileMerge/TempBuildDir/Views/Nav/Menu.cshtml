@{
    Layout = null;
    ViewBag.Title = "Menu";
}


<style>
    .content_left {
        float: left;
        height: 750px;
        width: 450px;
        margin-left: 15px;
    }

        .content_left a {
            text-align: center;
            font-size: 12px;
        }

    .folder_page_list {
        width: 450px;
        height: 50px;
        text-align: center;
        position: absolute;
        bottom: 0px;
    }

        .folder_page_list .pagination-container {
            height: 40px;
        }

            .folder_page_list .pagination-container ul {
                width: 400px;
                height: 10px;
            }

    .active {
        background-color: #428bca;
        color: red;
    }
</style>



@{
    int curPage = Image.WebUI.Models.Home.HomeIndexModel.PageFolder.PageIndex;
    int nextPage = curPage + 1;
    int prevPage = curPage - 1;

    int folderId = Image.WebUI.Models.Home.HomeIndexModel.FolderId;

    int imagePage;
    if (Image.WebUI.Models.Home.HomeIndexModel.PageImage != null)
    {
        imagePage = Image.WebUI.Models.Home.HomeIndexModel.PageImage.PageIndex;
    }
    else
    {
        imagePage = 1;
    }

    string keyWord;
    if (Image.WebUI.Models.Home.HomeIndexModel.KeyWord != "")
    {
        keyWord = Image.WebUI.Models.Home.HomeIndexModel.KeyWord;
    }
    else
    {
        keyWord = "";
    }
}

<div class="content_left">
    @foreach (var item in Image.WebUI.Models.Home.HomeIndexModel.PageFolder.GetPagingData())
    {
        @Html.ActionLink(item.Name, "Index", "Home", new { folderPage = curPage, folderId = @item.Id }, new { @class = "list-group-item" })
    }

    <div class="folder_page_list">
        @if (Image.WebUI.Models.Home.HomeIndexModel.PageFolder.HasPrev)
        {
            @Html.ActionLink("上一页", "Index", "Home", new { folderPage = prevPage, folderId = folderId }, new { @class = "" })
        }
        else
        {
            <span>上一页</span>
        }
        @if (Image.WebUI.Models.Home.HomeIndexModel.PageFolder.HasNext)
        {
            @Html.ActionLink("下..一页", "Index", "Home", new { folderPage = nextPage, folderId = folderId }, new { @class = "" })
        }
        else
        {
            <span>下一页</span>
        }
    </div>
</div>


