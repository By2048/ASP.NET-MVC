@model IEnumerable<MyStore.Domain.Concrete.Category>

@{
    ViewBag.Title = "CategoryManage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading"><h3>产品列表</h3></div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">
                    分类名称
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">
                        @Html.ActionLink(item.Name, "CategoryEdit", new { id = item.Id })
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("CategoryDelete", "Admin"))
                        {
                            @Html.Hidden("Id", item.Id)
                            <input type="submit" class="btn btn-default btn-xs" value="删除" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("新增", "CategoryCreate", null, new { @class = "btn btn-default" })
    </div>
</div>